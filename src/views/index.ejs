<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>CRUD Node MongoDB</title>
  </head>
  <body>
    
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <a href="/" class="navbar-brand">CRUD NodeJS & MongoDB</a>
        </nav>
    </header>
    
    <div class="main">
        <div class="container">
          <div class="row">
            <div class="col-md-5 mt-5">
              <div class="card">
                <div class="card-body">
                  <form action="/add" method="POST"> 
                    <h5 class="card-title text-center">Insert new task!</h5>
                    <div class="form-group">
                      <input class="form-control" name="title" placeholder="Insert title of task..." type="text">
                    </div>
                    <div class="form-group">
                      <textarea class="form-control" cols="30" rows="3" name="description" placeholder="Insert description of task..."></textarea>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Save task</button>
                  </form>
                </div>
              </div>
            </div>

            <!-- Table -->
            <div class="col-md-7 mt-5">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Options</th>
                  </tr>                  
                </thead>
                <tbody>
                  <% for(var i = 0; i<task.length; i++){%>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= task[i].title %></td>
                    <td><%= task[i].description %></td>
                    <td>
                      <a href="" class="btn btn-dark mr-2">Done</a>
                      <a href="" class="btn btn-info mr-2">Edit</a>
                      <a href="" class="btn btn-danger mr-2">Remove</a>
                    </td>
                  </tr>                  
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    <footer>

    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>