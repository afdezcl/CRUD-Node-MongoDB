<% include partials/_header %>
    
    <div class="main">
        <div class="container">
          <div class="row">
            <div class="col-md-5 mt-5 offset-md-3">
              <div class="card">
                <div class="card-body">
                  <form action="/add" method="POST"> 
                    <h5 class="card-title text-center">Insert new task!</h5>
                    <div class="form-group">
                      <input class="form-control" name="title" placeholder="Insert title of task..." type="text">
                    </div>
                    <div class="form-group">
                      <textarea class="form-control" cols="30" rows="3" name="description" placeholder="Insert description of task..."></textarea>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Save task</button>
                  </form>
                </div>
              </div>
            </div>

            <!-- Table -->
            <div class="col-md-12 mt-5">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr class="bg-light">
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Options</th>
                  </tr>                  
                </thead>
                <tbody>
                  <% for(var i = 0; i<task.length; i++){%>
                  <tr>
                    <td scope="row"><%= i + 1 %></td>
                    <td><%= task[i].title %></td>
                    <td><%= task[i].description %></td>
                    <td>
                      <a href="/change_status/<%= task[i]._id%>" class="btn <%= task[i].status ? 'btn-success' : 'btn-dark' %> mr-2">Done</a>
                      <a href="/edit/<%= task[i]._id%>" class="btn btn-info mr-2">Edit</a>
                      <a href="/delete/<%= task[i]._id%>" class="btn btn-danger mr-2">Delete</a>
                    </td>
                  </tr>                  
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

<% include partials/_footer %>